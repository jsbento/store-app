<% unless !review.approved? %>
  <p>
    <strong>Author: </strong>
    <%= review.author %>
  </p>

  <p>
    <strong>Review: </strong>
    <%= review.body %>
  </p>

  <p>
    <%= link_to "Delete Review", [review.item, review], data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this review?' } %>
  </p>
<% end %>